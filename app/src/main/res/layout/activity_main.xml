<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">



        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/ll_bottom_navigation"
            android:focusable="true"
            android:clickable="true"
            android:weightSum="4"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/mRecord"
                android:src="@drawable/record"
                android:background="@android:color/holo_blue_dark"
                android:padding="7dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageView
                android:id="@+id/mPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:padding="7dp"
                android:src="@drawable/play" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ll_bottom_navigation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
